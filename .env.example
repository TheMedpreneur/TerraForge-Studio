# ========================================
# TerraForge Studio - Configuration
# ========================================

# Application Settings
APP_NAME=TerraForge Studio
APP_VERSION=1.0.0
ENVIRONMENT=development

# API Server
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=true

# Frontend
FRONTEND_URL=http://localhost:8080
CORS_ORIGINS=["http://localhost:8080", "http://127.0.0.1:8080"]

# ========================================
# Geospatial Data Sources
# ========================================

# Sentinel Hub (Satellite Imagery)
# Get your API key from: https://www.sentinel-hub.com/
SENTINELHUB_CLIENT_ID=
SENTINELHUB_CLIENT_SECRET=
SENTINELHUB_INSTANCE_ID=
SENTINELHUB_ENABLED=false

# OpenTopography (High-resolution DEMs)
# Get your API key from: https://opentopography.org/
OPENTOPOGRAPHY_API_KEY=
OPENTOPOGRAPHY_ENABLED=false

# Azure Maps (Vector data, routing, POI)
# Get your key from: https://azure.microsoft.com/services/azure-maps/
AZURE_MAPS_SUBSCRIPTION_KEY=
AZURE_MAPS_ENABLED=false

# Google Earth Engine (Advanced geospatial analysis)
# Requires service account JSON - see: https://developers.google.com/earth-engine/
GOOGLE_EARTH_ENGINE_SERVICE_ACCOUNT=
GOOGLE_EARTH_ENGINE_PRIVATE_KEY_PATH=
GOOGLE_EARTH_ENGINE_ENABLED=false

# OpenStreetMap (Always enabled as fallback)
OSM_USER_AGENT=TerraForge-Studio/1.0
OSM_ENABLED=true

# ========================================
# Terrain Generation Settings
# ========================================

# Default Resolution (pixels)
DEFAULT_HEIGHTMAP_RESOLUTION=2048
MIN_RESOLUTION=512
MAX_RESOLUTION=8192

# Area Limits (kmÂ²)
MAX_AREA_KM2=100.0
DEFAULT_AREA_KM2=10.0

# Height Range (meters)
DEFAULT_HEIGHT_MIN=-256
DEFAULT_HEIGHT_MAX=256

# Elevation Data Source Priority
# Options: sentinel, opentopography, srtm, aster
ELEVATION_SOURCE_PRIORITY=opentopography,srtm,aster

# ========================================
# Export Settings
# ========================================

# Unreal Engine 5
UE5_HEIGHTMAP_FORMAT=16bit_png  # 16bit_png or raw
UE5_DEFAULT_LANDSCAPE_SIZE=2017  # 1009, 2017, 4033, 8129
UE5_EXPORT_WEIGHTMAPS=true
UE5_EXPORT_SPLINES=true

# Unity
UNITY_HEIGHTMAP_FORMAT=raw  # raw or 16bit_png
UNITY_DEFAULT_TERRAIN_SIZE=2049  # 513, 1025, 2049, 4097
UNITY_EXPORT_SPLATMAPS=true
UNITY_EXPORT_TREES=true

# Generic Formats
GENERIC_EXPORT_GLTF=true
GENERIC_EXPORT_GEOTIFF=true
GENERIC_EXPORT_OBJ=true
GENERIC_EXPORT_USDZ=false

# ========================================
# Processing Settings
# ========================================

# Performance
PARALLEL_PROCESSING=true
MAX_WORKERS=4
CHUNK_SIZE=1024

# Caching
ENABLE_CACHE=true
CACHE_DIR=./cache
CACHE_EXPIRY_DAYS=30

# Output
OUTPUT_DIR=./output
TEMP_DIR=./temp

# ========================================
# AI Settings (Optional)
# ========================================

# Ollama Configuration
OLLAMA_HOST=http://localhost:11434
OLLAMA_VISION_MODEL=llama3.2-vision:11b
OLLAMA_CODER_MODEL=qwen2.5-coder:7b
OLLAMA_TIMEOUT=300
OLLAMA_ENABLED=false

# AI Features
ENABLE_AI_TERRAIN_ANALYSIS=false
ENABLE_AI_MATERIAL_CLASSIFICATION=false
ENABLE_AI_BUILDING_HEIGHT_ESTIMATION=false

# ========================================
# Feature Toggles
# ========================================

# Default Feature Flags
ENABLE_ROADS=true
ENABLE_BUILDINGS=true
ENABLE_VEGETATION=true
ENABLE_WATER_BODIES=true

# Advanced Features
ENABLE_3D_PREVIEW=true
ENABLE_MATERIAL_LAYERS=true
ENABLE_PROCEDURAL_ROADS=true
ENABLE_BATCH_PROCESSING=false

# ========================================
# Logging
# ========================================

LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_FILE=./logs/terraforge.log
LOG_FORMAT=json  # json or text
LOG_ROTATION=10MB

# ========================================
# Security
# ========================================

# API Keys (if using authentication)
API_KEY_ENABLED=false
API_KEYS=[]

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=60

# CORS
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=["GET", "POST", "PUT", "DELETE", "OPTIONS"]
CORS_ALLOW_HEADERS=["*"]
